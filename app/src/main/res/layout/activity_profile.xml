<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".profile">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageView
            android:id="@+id/back"
            android:layout_width="46dp"
            android:layout_height="44dp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="5px"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A57D7B">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/profileemage"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="350px"
                    android:layout_height="350px"
                    android:layout_marginTop="5px"
                    android:layout_marginBottom="3px"
                    android:src="@drawable/profile2" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amal Alanzi "
                    android:textColor="#808080"
                    android:textSize="22sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:layout_marginTop="7px"
                android:background="@drawable/profileemage2">

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:orientation="vertical"
            android:paddingTop="50px">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#46515C"
                    android:layout_marginLeft="310sp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="الاسم : "/>

                <TextView
                    android:id="@+id/fullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFFFF"
                    android:textSize="20sp"
                    android:layout_marginLeft="240sp"
                    android:layout_marginTop="2sp"
                    android:textStyle="normal"
                    android:text="امل العنزي "/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8px"
                android:layout_marginTop="10px"
                android:layout_marginRight="20px"
                android:layout_marginBottom="10px"

                android:background="#25394949"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="225sp"
                    android:textColor="#46515C"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="البريد الإلكتروني : "/>

                <TextView
                    android:id="@+id/userEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFFFF"
                    android:textSize="20sp"
                    android:layout_marginLeft="170sp"
                    android:layout_marginTop="2sp"
                    android:textStyle="normal"
                    android:text="amal@outlook.sa"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8px"
                android:layout_marginTop="10px"
                android:layout_marginRight="20px"
                android:layout_marginBottom="10px"
                android:background="#25394949"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="260sp"
                    android:textColor="#46515C"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="نوع العضو : "/>

                <TextView
                    android:id="@+id/UserType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFFFF"
                    android:textSize="20sp"
                    android:layout_marginLeft="280sp"
                    android:layout_marginTop="2sp"
                    android:textStyle="normal"
                    android:text="داعم"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8px"
                android:layout_marginTop="10px"
                android:layout_marginRight="20px"
                android:layout_marginBottom="10px"
                android:background="#25394949"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:layout_marginLeft="240sp"
                    android:textColor="#46515C"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="مستوى المرض :"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFFFF"
                    android:textSize="20sp"
                    android:layout_marginLeft="280sp"
                    android:layout_marginTop="2sp"
                    android:textStyle="normal"
                    android:text="داعم"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="8px"
                android:layout_marginTop="10px"
                android:layout_marginRight="20px"
                android:layout_marginBottom="10px"
                android:background="#25394949"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/logout"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="65px"
                    android:layout_marginLeft="220sp"
                    android:textColor="#46515C"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="تسجيل خروج "/>


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="50px"
                    android:layout_marginLeft="1sp"
                    android:src="@drawable/ic_baseline_exit_to_app_24" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    </LinearLayout>



